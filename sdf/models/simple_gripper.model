<gazebo version='1.0'>
  <model name="simple_gripper" static="false">
    <body name="riser">
      <origin pose="-0.15 0.0 0.5 0 0 0"/>

      <collision name="collision">
        <mass>10.0</mass>
        <geometry>
          <box size="0.2 0.2 1.0"/>
        </geometry>
        <surface>
          <contact>
            <ode max_vel="0.0"/>
          </contact>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="0.2 0.2 1.0"/>
        </geometry>
        <material script="Gazebo/Purple"/>
      </visual>
    </body>

    <body name="palm">
      <origin pose="0.0 0.0 0.05 0 0 0"/>

      <collision name="collision">
        <mass>0.5</mass>
        <geometry>
          <box size="0.1 0.2 0.1"/>
        </geometry>
        <surface>
          <contact>
            <ode max_vel="0.0"/>
          </contact>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="0.1 0.2 0.1"/>
        </geometry>
        <material script="Gazebo/Red"/>
      </visual>
    </body>

    <body name="left_finger">
      <origin pose="0.1 0.2 0.05 0 0 -0.78539"/>

      <collision name="collision">
        <mass>0.1</mass>
        <geometry>
          <box size="0.1 0.3 0.1"/>
        </geometry>
        <surface>
          <friction>
            <ode mu="0.1" mu2="0"/>
          </friction>
          <contact>
            <ode max_vel="0.0"/>
          </contact>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="0.1 0.3 0.1"/>
        </geometry>
        <material script="Gazebo/Blue"/>
      </visual>
    </body>

    <body name="left_finger_tip">
      <origin pose="0.336 0.3 0.05 0 0 1.5707"/>

      <collision name="collision">
        <mass>0.5</mass>
        <geometry>
          <box size="0.1 0.2 0.1"/>
        </geometry>
        <surface>
          <friction>
            <ode mu=".1" mu2="0"/>
          </friction>
          <contact>
            <ode max_vel="0.0"/>
          </contact>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="0.1 0.2 0.1"/>
        </geometry>
        <material script="Gazebo/Blue"/>
      </visual>
    </body>

    <body name="right_finger">
      <origin pose="0.1 -0.2 0.05 0 0 .78539"/>

      <collision name="collision">
        <mass>0.1</mass>
        <geometry>
          <box size="0.1 0.3 0.1"/>
        </geometry>
        <surface>
          <friction>
            <ode mu="0.1" mu2="0"/>
          </friction>
          <contact>
            <ode max_vel="0.0"/>
          </contact>
        </surface>

      </collision>
      <visual name="visual">
        <geometry>
          <box size="0.1 0.3 0.1"/>
        </geometry>
        <material script="Gazebo/Green"/>
      </visual>
    </body>

    <body name="right_finger_tip">
      <origin pose="0.336 -0.3 0.05 0 0 1.5707"/>

      <collision name="collision">
        <mass>0.1</mass>
        <geometry>
          <box size="0.1 0.2 0.1"/>
        </geometry>
        <surface>
          <friction>
            <ode mu="0.1" mu2="0"/>
          </friction>
          <contact>
            <ode max_vel="0.0"/>
          </contact>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="0.1 0.2 0.1"/>
        </geometry>
        <material script="Gazebo/Green"/>
      </visual>
    </body>

    <joint name="palm_left_finger" type="revolute">
      <origin pose="0 -0.15 0 0 0 0"/>
      <child body="left_finger"/>
      <parent body="palm"/>
      <axis xyz="0 0 1">
        <limit lower="-0.8" upper="0.8"/>
      </axis>
    </joint>

    <joint name="left_finger_tip" type="revolute">
      <origin pose="0 0.1 0 0 0 0"/>
      <child body="left_finger_tip"/>
      <parent body="left_finger"/>
      <axis xyz="0 0 1">
        <limit lower="-0.8" upper="0.8"/>
      </axis>
    </joint>

    <joint name="palm_right_finger" type="revolute">
      <origin pose="0 0.15 0 0 0 0"/>
      <child body="right_finger"/>
      <parent body="palm"/>
      <axis xyz="0 0 1">
        <limit lower="-0.8" upper="0.8"/>
      </axis>
    </joint>

    <joint name="right_finger_tip" type="revolute">
      <origin pose="0 0.1 0 0 0 0"/>
      <child body="right_finger_tip"/>
      <parent body="right_finger"/>
      <axis xyz="0 0 1">
        <limit lower="-0.8" upper="0.8"/>
      </axis>
    </joint>

    <joint name="palm_riser" type="prismatic">
      <child body="palm"/>
      <parent body="riser"/>
      <axis xyz="0 0 1">
        <limit lower="0" upper="0.9"/> 
      </axis>
    </joint>

    <joint name="fixed_riser" type="revolute">
      <child body="riser"/>
      <parent body="world"/>
      <axis xyz="0 0 1">
        <limit lower="0" upper="0"/> 
      </axis>
    </joint>


    <plugin filename="libGripperPlugin.so" name="gripper">
      <joint>palm_right_finger</joint>
      <joint>right_finger_tip</joint>
      <joint>palm_left_finger</joint>
      <joint>left_finger_tip</joint>
    </plugin>

  </model>
</gazebo>
